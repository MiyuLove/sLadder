<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/sLadderBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ownglyp"
                android:gravity="center"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="5"
                android:text="SLadder\nGame"
                android:textAlignment="center"
                android:textColor="#BAE8FF"
                android:textSize="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/start_game"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/btn_color"
            android:fontFamily="@font/ownglyp"
            android:shadowColor="#0000FB"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="시 작 하 기"
            android:textColor="#BAE8FF"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_70"
            app:layout_constraintEnd_toStartOf="@+id/guidelineMiddle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal" />

        <Button
            android:id="@+id/setting_game"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_color"
            android:fontFamily="@font/ownglyp"
            android:shadowColor="#0000FB"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="설 정 하 기"
            android:textColor="#BAE8FF"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guidelineMiddle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_70" />


        <Button
            android:id="@+id/goal_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"

            android:background="@drawable/btn_color"
            android:fontFamily="@font/ownglyp"
            android:shadowColor="#0000FB"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="당 첨 이 력"
            android:textColor="#BAE8FF"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_70"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/start_game"
            app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal" />

        <Button
            android:id="@+id/exit_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/btn_color"
            android:fontFamily="@font/ownglyp"
            android:shadowColor="#0000FB"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="종 료 하 기"
            android:textColor="#BAE8FF"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/setting_game"
            app:layout_constraintTop_toTopOf="@+id/guideline_horizontal_70" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal_70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.7"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>